{
  "compilerOptions": {
    "target": "es2015", 
    "module": "es2015", 
    //"rootDir": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    //"preserveConstEnums": true,
    //"allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    //"watch": true
  },
  "exclude": [
      "node_modules"
  ]
}